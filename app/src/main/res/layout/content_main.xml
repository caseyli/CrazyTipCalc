<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bill_amount"
        android:id="@+id/billAmountTextView"
        android:layout_alignBaseline="@+id/billAmountEditText"
        android:layout_alignBottom="@+id/billAmountEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/tipAmountTextView"
        android:layout_alignEnd="@+id/tipAmountTextView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/billAmountEditText"
        android:ems='5'
        android:inputType="numberDecimal"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/billAmountTextView"
        android:layout_toEndOf="@+id/billAmountTextView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tipAmountEditText"
        android:ems='5'
        android:inputType="numberDecimal"
        android:layout_below="@+id/billAmountEditText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/tipAmountTextView"
        android:layout_toEndOf="@+id/tipAmountTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tip_amount"
        android:id="@+id/tipAmountTextView"
        android:layout_alignBaseline="@+id/tipAmountEditText"
        android:layout_alignBottom="@+id/tipAmountEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/finalAmountTextView"
        android:layout_alignEnd="@+id/finalAmountTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/final_amount"
        android:id="@+id/finalAmountTextView"
        android:layout_alignBaseline="@+id/finalAmountEditText"
        android:layout_alignBottom="@+id/finalAmountEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/finalAmountEditText"
        android:ems='5'
        android:inputType="numberDecimal"
        android:layout_below="@+id/tipAmountEditText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/finalAmountTextView"
        android:layout_toEndOf="@+id/finalAmountTextView" />
</RelativeLayout>
